public  class reverseNum{
    static int reverse(int n ){
        int rem ;
        int rev = 0;
        while( n >0){
            rem = n%10;
            rev = (rev*10)+rem;
            n = n/10;

        }
        return rev ;
    }

    public static void main(String[] args) {
        int n = 5432;
        System.out.println("the reversed number is :"+reverse(n));
    }
}
